<h1>Title: <%= @group.title %></h1>
<h2>Created By: <%= @group.user.name %></h2>
<h3>Category: <%= @group.category.name %></h3>

<% @group.cards.each do |card| %>
<li><%= card.front %> - <%= card.back%></li>
<% end %>

<br />
<%= button_to 'Study This Group', cards_front_path(@group), method: :get, :class => 'btn-style-spc' %>
<br />
<% if current_user == @group.user %>
<%= button_to 'Edit Group Contents', edit_group_path(@group), method: :get, :class => 'btn-style' %>
<% end %>